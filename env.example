# Team Ops Assistant - Environment Variables
# Copy this file to .env and fill in your values

# MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/team_ops?retryWrites=true&w=majority

# Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
# Secret token for webhook verification (set when registering webhook)
TELEGRAM_WEBHOOK_SECRET=your-telegram-webhook-secret

# Slack Bot Token (from Slack API portal)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
# Signing Secret for request verification (from Slack App settings)
SLACK_SIGNING_SECRET=your-slack-signing-secret

# Discord Bot Token (from Discord Developer Portal)
DISCORD_BOT_TOKEN=your-discord-bot-token

# WhatsApp Cloud API credentials
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_APP_SECRET=your-app-secret-for-signature-verification

# LLM API keys (for time detection fallback)
# NVIDIA NIM API (primary - used by llm_fallback.py)
NVIDIA_API_KEY=your-nvidia-api-key
# Together AI API (legacy, not currently used)
TOGETHER_API_KEY=your-together-api-key

# Application settings
APP_SECRET_KEY=change-this-to-a-random-secret-key
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=false

# Verify token signing secret
VERIFY_TOKEN_SECRET=change-this-to-a-random-secret
